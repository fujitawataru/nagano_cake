<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
         <div class="container">
       <ul class= "navbar-nav">
         <a class="navbar-brand" href="#">nagano_cake</a>
         
         <div class= "collapse navbar-collapse nav.fixed-top justify-content-end">
        <% if current_customer %>
        <div>ようこそ、<%= current_customer.full_name %>さん！</div>
        <% end %>

        <% if customer_signed_in? %>

        <li class="nav-item">
          <%= link_to "マイページ",my_page_path(current_customer) %>
        </li>

        <li class="nav-item">
           <%= link_to "商品一覧",items_path %>
        </li>

        <li class="nav-item">
          <%= link_to "カート",cart_items_path %>
        </li>

         <li class="nav-item">
           <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
         </li>
         <% elsif admin_signed_in? %>

           <li class="nav-item">
            <%= link_to "商品一覧", admin_items_path %>
           </li>

           <li class="nav-item">
            <%= link_to "会員一覧", admin_customers_path %>
           </li>

           <li class="nav-item">
            <%= link_to "注文履歴一覧", admin_orders_path %>
           </li>

           <li class="nav-item"> 
            <%= link_to "ジャンル一覧", admin_genres_path %>
           </li>

           <li class="nav-item">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
           </li>


         <% else %>
         <li class="nav-item">
          <%= link_to "about",home_about_path,class:"nav-linl text-dark" %>
         </li>

         <li class="nav-item">
           <%= link_to "商品一覧",items_path %>
         </li>

         <li class="nav-item">
          <%= link_to "新規登録",new_customer_registration_path %>
         </li>

         <li class="nav-item">
           <%= link_to"ログイン",customer_session_path %>
         </li>
         <% end %>
         </div>
       </ul>
       </div>
      </nav>
    </header>
<main>
<% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>

<%= yield %>
</main>

    <footer>
<div class="container mt-5 bg-se">
        <div class= "row">
         <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
          
         </div>
        </div>
      </div>
    </footer>
  </body>
</html>