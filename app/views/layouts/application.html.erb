<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
            <div class="container">
            <a class="navbar-brand" href="/">nagano_cake</a>
            <% if current_customer %>
             <div>ようこそ、<%= current_customer.full_name %>さん！</div>
            <% end %>

          <ul class= "navbar-nav ml-auto">

           <% if customer_signed_in? %>

            <li class="nav-item">
             <%= link_to "マイページ",my_page_path(current_customer),class:"nav-link text-light" %>
            </li>

            <li class="nav-item">
             <%= link_to "商品一覧",items_path,class:"nav-link text-light" %>
            </li>

            <li class="nav-item">
             <%= link_to "カート",cart_items_path,class:"nav-link text-light" %>
            </li>

            <li class="nav-item">
             <%= link_to "ログアウト", destroy_customer_session_path, method: :delete,class:"nav-link text-light" %>
            </li>

          <% elsif admin_signed_in? %>

            <li class="nav-item ">
             <%= link_to "商品一覧", admin_items_path,class:"nav-link text-light" %>
            </li>

            <li class="nav-item">
             <%= link_to "会員一覧", admin_customers_path,class:"nav-link text-light" %>
            </li>

            <li class="nav-item">
             <%= link_to "注文履歴一覧", admin_orders_path,class:"nav-link text-light" %>
            </li>

            <li class="nav-item">
             <%= link_to "ジャンル一覧", admin_genres_path,class:"nav-link text-light" %>
            </li>

            <li class="nav-item">
             <%= link_to "ログアウト", destroy_admin_session_path, method: :delete,class:"nav-link text-light" %>
            </li>


          <% else %>

            <li class="nav-item">
             <%= link_to "about",home_about_path,class:"nav-link text-light" %>
            </li>

            <li class="nav-item">
             <%= link_to "商品一覧",items_path,class:"nav-link text-light" %>
            </li>

            <li class="nav-item">
             <%= link_to "新規登録",new_customer_registration_path,class:"nav-link text-light" %>
            </li>

            <li class="nav-item">
              <%= link_to"ログイン",customer_session_path,class:"nav-link text-light" %>
            </li>

          <% end %>
         </ul>
        </nav>
      </div>
    </header>
   <main>
    <% flash.each do |key, value| %>
     <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <%= yield %>
   </main>

    <footer>
     <div class="mt-5 bg-secondary text-white">
        <div class= "row">
         <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
         </div>
        </div>
      </div>
    </footer>
  </body>
</html>