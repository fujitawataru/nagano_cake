<div class="container">

<h4>注文履歴一覧</h4>

<% if @orders.present? %>

 <table class="table table-bordered">
   <thead class="table table-secondary">
     <tr>
       <th>注文日</th>
       <th>配送先</th>
       <th>注文商品</th>
       <th>支払金額</th>
       <th>ステータス</th>
       <th>注文詳細</th>
     </tr>
   </thead>
   <tbody>

    <% @orders.each do |order| %>

      <tr>
       <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
 
       <td>〒<%= order.postal_code %><br>
          <%= order.address %><br>
          <%= order.name %></td>

       <td><% order.order_details.each do |order_detail| %>
          <p><%= order_detail.item.name %></p>
           <% end %></td>

       <td><%= order.total_payment.to_s(:delimited, delimiter: ',') %>円</td>

       <td><%= order.status_i18n %></td>
       
       <td><%= link_to "表示する",order_path(order.id),class:"btn btn-sm btn-primary" %></td>
     </tr>
    <% end %>
   </tbody>
  </table>

<% else %>

 <div class="enpty">
  <spna class="enpty-word"><strong>注文履歴はありません</strong></span>
 </div>

<% end %>

</div> 