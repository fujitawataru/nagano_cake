<div class="container">
  <div class="row">
    <h4>注文履歴詳細</h4>
  </div>

  <div class="row">
    <div class="col-7">

      <h6><strong>注文情報</strong></h6>

      <table class="table table-bordered">

       <tr>
        <th class="table table-secondary" style="width: 30%">注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
       </tr>

       <tr>
        <th class="table table-secondary" style="width: 30%">配送先</th>
        <td>〒<%= @order.postal_code %><br>
             <%= @order.address %><br>
             <%= @order.name %></td>
       </tr>

        <tr>
         <th class="table table-secondary" style="width: 30%">支払方法</th>
         <td><%= @order.payment_method_i18n %></td>
         </tr>

        <tr>
          <th class="table table-secondary" style="width: 30%">ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>

    <div class=" offset-1 col-4">
       <h6><strong>請求情報</strong></h6>
       <table class="table table-bordered">
        <tr>
         <th class="table table-secondary" style="width: 40%">商品合計</th>
         <td><%= @total.to_s(:delimited, delimiter: ',') %></td>
        </tr>

        <tr>
         <th class="table table-secondary" style="width: 40%">送料</th>
         <td><%= @order.shipping_cost %></td>
        </tr>

        <tr>
         <th class="table table-secondary" style="width: 40%"><strong>ご請求額</strong></th>
         <td><%= (@total + @order.shipping_cost).to_s(:delimited, delimiter: ',') %></td>
        </tr>
       </table>
    </div>
  </div>


  <div class="row">
    <div class="col-9">
     <h6><strong>注文内容</strong></h6>
     <table class="table table-bordered">
       <thead class="table table-secondary">
         <tr>
           <th>商品</th>
           <th>単価（税込）</th>
           <th>個数</th>
           <th>小計</th>
         </tr>
       </theader>

       <tbody>
        <tr>
         <% @order.order_details.each do |order_detail| %>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.with_tax_price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.subtotal.to_s(:delimited, delimiter: ',') %></td>
        </tr>
        <% end %>
       </tbody>
     </table>
    </div>
  </div>
</div>