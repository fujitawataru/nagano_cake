<h2>新規会員登録</h2>

<%= form_with model:@customer, url: registration_path(resource_name),local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <pre><%= f.label "名前"%>       (姓）<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>  （名）<%= f.text_field :first_name, autofocus: true %></pre>
  </div>
  
  <div class="field">
    <pre><%= f.label "フリガナ" %>   (セイ）<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>   (メイ）<%= f.text_field :first_name_kana, autofocus: true %></pre>
  </div>
  
    <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
   <div class="field">
    <%= f.label "郵便番号(ハイフンなし）" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>
  
   <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  
   <div class="field">
    <%= f.label "電話番号（ハイフンなし）" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>(<%= @minimum_password_length %> 文字以上)
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード（確認用）" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<p><%= link_to "こちら", customer_session_path %>からログインしてください</p>
