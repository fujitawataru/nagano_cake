<h2>商品編集</h2>
<% if @item.errors.any? %>
<div id="error_explanation">
 <h2><%= @item.errors.count %>件のエラーが発生しました</h2>
  <ul>
    <% @item.errors.full_messages.each do |message| %>
    <li><%= message %>
    <% end %>
    </li>
  </ul>
 </div>
 <% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-8">
      
     
      <%= form_with model:@item,url:admin_item_path(@item.id), local:true do |f| %>
     <table>
      <tr>
      <th>商品画像</th>
      <td><%= f.attachment_field :image %></td>
      </tr>
      
      <tr>
        <th>商品名</th>
        <td><%= f.text_field :name %></td>
      </tr>
      
      <tr>
       <th>商品説明</th>
       <td><%= f.text_area :introduction %></td>
       </tr>
       
       <tr>
         <th>ジャンル</th>
         <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name),{include_blank: '選択してください'} %></td>
       </tr>
       
       <tr>
       <th>税抜価格</th>
       <td><%= f.text_field :price, placeholder: "１０００" %>円</td>
       </tr>
       
       <tr>
       <th>販売ステータス</th>
       <td><%= f.radio_button :is_active, "販売中" %> 販売中
       <%= f.radio_button :is_active, "販売停止中" %> 販売停止</td>
       </tr>
       </table>
       <span><%= f.submit "変更を保存",class:"btn btn-success" %></span>
      
      <% end %>
       
    </div>
  </div>
</div>