<h2>商品説明</h2>
<div class="container">
  <div class="row">
    <div class="col-lg-4">
     <%= attachment_image_tag @item, :image, :fill, 60, 60, format:'jpeg'%>
    </div>
    
    <div class="col-lg-8">
      
      <table>
      <tr>
        <th>商品名</th>
        <td><%= @item.name %></td>
      <tr>
        <th>商品説明</th>
        <td><%= @item.introduction %></td>
      </tr>
      
      <tr>
      <th>税込価格</th>
      <td><%= @item.price %></td>
      </tr>
      
      <tr>
      <th>販売ステータス</th>
      <% if @item.is_active %> 
       <td>販売中</td>
           <% else %>
       <td>販売停止中</td>
           <% end %>
      </td>
      
      </table>
      <p><%= link_to "編集する",edit_admin_item_path(@item.id),class:"btn btn-success" %></p>
    </div>
  </div>
</div>