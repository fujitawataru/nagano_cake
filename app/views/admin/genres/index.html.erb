<h6>ジャンル一覧・追加</h6>

<%= form_with model:@genre,url:admin_genres_path, local:true do |f| %>

<p><strong>ジャンル名</strong> <%= f.text_field :name, placeholder: "ジャンル名" %> <%= f.submit "新規登録",class:"btn btn-success" %></p>
<% end %>

<table >
  <theader>
  <tr>
  <th>ジャンル</th>
  <th></th>
  </tr>
  </theader>
  
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する",edit_admin_genre_path(genre.id),class:"btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>