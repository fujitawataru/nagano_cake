<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

<% if @customer.errors.any? %>
 <div id="error_explanation">
  <h2><%= @customer.errors.count %>件のエラーが発生しました</h2>
   <ul>
    <% @customer.errors.full_messages.each do |message| %>
     <li><%= message %>
    <% end %>
     </li>
   </ul>
 </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-lg-8">
      
      <%= form_with model:@customer,url:admin_customer_path(@customer.id), local:true do |f| %>
      
      <table>
      <tr>
        <th>ID</th>
        <td><%= @customer.id %></td>
      </tr>
      
      <tr>
      <th>氏名</th>
      <td><%= f.text_field :last_name %>  <%= f.text_field :first_name %></td>
      </tr>
      
      <tr>
        <th>フリガナ</th>
        <td><%= f.text_field :last_name_kana %>  <%= f.text_field :first_name_kana %></td>
      </tr>
      
      <tr>
       <th>郵便番号</th>
       <td><%= f.text_field :postal_code %></td>
       </tr>
       
       <tr>
       <th>住所</th>
       <td><%= f.text_area :address %></td>
       </tr>
       
       <tr>
         <th>電話番号</th>
         <td><%= f.text_field :telephone_number %></td>
       </tr>
       
       <tr>
         <th>メールアドレス</th>
         <td><%= f.text_field :email %></td>
       </tr>
         
       <tr>
       <th>会員ステータス</th>
       <td><%= f.radio_button :is_deleted, :false %> 有効
       <%= f.radio_button :is_deleted, :true %> 退会</td>
       </tr>
       
       </table>
       <span><%= f.submit "変更を保存",class:"btn btn-success" %></span>
      
      <% end %>
       
    </div>
  </div>
</div>