<div class= "container">
  <div class= "row">
    <div class= "col-lg-3" >
    <table class= "table">
      <thead class="thead-light">
        <tr>
          <th>ジャンル検索</th>
        </tr>
      </thead>
      <% @genres.each do |genre| %>

      <tbody>
      <tr>
        <td><%= genre.name %></td>
      </tr>
      <% end %>
      </tbody>
    </table>


    </div>

    <div class="offset-lg-1 col-lg-8">

     <h4><strong>商品一覧</strong>(全<%= @items.count %>件)</h4>
   　<div class= "row">

      <% @items.each do |item| %>
       <div class= "col-lg-3">
         <%= link_to item_path(item.id) do %>
        <div><%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg' %></div>
        <div><%= item.name %></div>
        <div>¥<%= item.price.to_s(:delimited, delimiter: ',') %></div>
        <% end %>
       </div>
        <% end %>
        <%= paginate @items %>
   　</div>
    </div>
  </div>

</div>