<div class= "container">
  <div class= "row">
    <div class= "col-lg-2" style="background-color :pink;">
      <p>ジャンル実装予定</p>
    </div>

    <div class="col-lg-offset-2 col-lg-8">

     <h2>商品一覧</h2>
   　<div class= "row">

      <% @items.each do |item| %>
       <div class= "col-lg-3">
         <%= link_to item_path(item.id) do %>
        <div><%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg' %></div>
        <div><%= item.name %></div>
        <div>¥<%= item.price %></div>
        <% end %>
       </div>
        <% end %>
        <%= paginate @items %>
   　</div>
    </div>
  </div>

</div>